@model IEnumerable<CASMUL.Models.Item.ListaItemViewModel>



<div class="row">
    <div class="col-md-12 ui-sortable">
        <!-- begin panel -->
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="~/Item/Create" class="btn btn-xs btn-primary" data-original-title="Crear Usuario" title="Crear Usuario"><i class="fa fa-plus"></i> Nuevo</a>
                </div>
                <h4 class="panel-title">Items</h4>
            </div>
            <div class="panel-body">
                <table class="table" data-class="dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdCategoria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdUnidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CantidadInicial)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categoria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Unidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CantidadInicial)
                                </td>
                                <td>
                                   @* @Html.ActionLink("Edit", "Edit", new { id = item.IdItem }) |*@
                                    @if (Convert.ToBoolean(item.Activo))
                                    {

                                        @Html.ActionLink("Desactivar", "Delete", new { id = item.IdItem })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Activar", "Delete", new { id = item.IdItem })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>
